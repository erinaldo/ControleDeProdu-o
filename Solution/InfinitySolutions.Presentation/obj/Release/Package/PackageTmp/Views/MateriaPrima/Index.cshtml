@using InfinitySolutions.Entity
@using InfinitySolutions.Commom
@model InfinitySolutions.Presentation.Models.MateriaPrimaModel
@{
    ViewBag.Title = "Matéria Prima";
    ViewBag.Imagem = "~/Content/imagens/logoVestiry.png";

    string ClasseMensagem = Model.Retorno.IsValido ? "alert-success" : "alert-danger";
    string ClasseVisivel = !String.IsNullOrEmpty(@Model.Retorno.Mensagem) ? String.Empty : "invisivel";
    var login = Session[Constantes.USUARIO_LOGADO] as Login;
}

<div class="row tabela-inicio">
    <div class="col-lg-12 col-md-12 col-xs-12">
        <div class="jumbotron">
            @if (!String.IsNullOrEmpty(Model.Retorno.Mensagem))
            {
                <div id="divMensagemPrincipalMateriaPrima" class="alert @ClasseMensagem js-mensagem" role="alert">
                    <label><span id="spanMensagem" class="js-escrita-mensagem">@Model.Retorno.Mensagem</span></label>
                </div>
            }
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">DESCRIÇÃO</th>
                        <th scope="col">FORNECEDOR</th>
                        <th scope="col">VALOR CUSTO</th>
                        <th scope="col">QUANTIDADE</th>
                        <th scope="col">UNIDADE MEDIDA</th>
                        <th scope="col">AÇÕES</th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model.Retorno.Entity != null)
                    {
                        foreach (var materiaPrima in (List<MateriaPrima>)Model.Retorno.Entity)
                        {
                            <tr>
                                <td scope="col">@materiaPrima.Descricao.ToUpper()</td>
                                <td scope="col">@materiaPrima.Fornecedor.ToUpper()</td>
                                <td scope="col">@materiaPrima.Valor.Value.ToString("C")</td>
                                <td scope="col">@materiaPrima.Quantidade</td>
                                <td scope="col">@materiaPrima.TipoUnidadeMedida.Descricao</td>
                                <td scope="col">
                                    <img id="@materiaPrima.Codigo" src="~/Content/imagens/EditarMenor.png" alt="ALTERAR MATÉRIA PRIMA" title="ALTERAR MATÉRIA PRIMA" class="js-AlterarMateriaPrima" />
                                    <img id="@materiaPrima.Codigo" src="~/Content/imagens/ExcluirMenor.png" alt="EXCLUIR MATÉRIA PRIMA" title="EXCLUIR MATÉRIA PRIMA" class="js-ExcluirMateriaPrima" />
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@if (login.TiposPermissoes.Any(p => p.Codigo == (int)EnumTipoPermissao.ADICIONAR))
{
    <a id="btnAdicionarMateriaPrima" data-toggle="modal" data-target="#modalIncluirMateriaPrima">
        Adicionar Matéria Prima
    </a>
}

@using (Html.BeginForm("Salvar", "MateriaPrima", FormMethod.Post, new { @class = "form-horizontal", id = "formIncluirMateriaPrima" }))
{
    @Html.HiddenFor(model => model.MateriaPrima.Codigo, new { id = "hdnMateriaPrimaCodigo" })

    <div class="modal fade" id="modalIncluirMateriaPrima" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">MATÉRIA PRIMA</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="divMensagem" class="alert @ClasseMensagem invisivel js-mensagem" role="alert">
                    <label><span id="spanMensagem" class="js-escrita-mensagem">@Model.Retorno.Mensagem</span></label>
                </div>
                <div class="modal-body">
                    <div class="jumbotron">
                        <div class="form-group">
                            <div class="col-lg-12 col-md-12 col-xs-12">
                                <div class="col-lg-4 col-md-4 col-xs-4">
                                    <label><span class="fonte-vermelha control-label">* </span>Descrição</label>
                                    @Html.TextBoxFor(m => m.MateriaPrima.Descricao, new { id = "txtMateriaPrimaDescricao", @class = "form-control js-obrigatorio", maxLength = 150 })
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-4">
                                    <label><span class="fonte-vermelha control-label">* </span>Unidade Medida</label>
                                    @Html.DropDownListFor(m => m.MateriaPrima.TipoUnidadeMedida.Codigo, new SelectList(Model.Dominios.TiposUnidadeMedida, "Codigo", "Descricao"), "...", new { id = "ddlMateriaPrimaTipoUnidadeMedida", @class = "form-control js-obrigatorio" })
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-4">
                                    <label><span class="fonte-vermelha control-label">* </span>Quantidade</label>
                                    @Html.TextBoxFor(m => m.MateriaPrima.Quantidade, new { id = "txtMateriaPrimaQuantidade", @class = "form-control js-decimal js-obrigatorio", maxLenght = 10 })
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-4">
                                    <label><span class="fonte-vermelha control-label">* </span>Fornecedor</label>
                                    @Html.TextBoxFor(m => m.MateriaPrima.Fornecedor, new { id = "txtMateriaPrimaFornecedor", @class = "form-control js-obrigatorio", maxLenght = 150 })
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-4">
                                    <label><span class="fonte-vermelha control-label">* </span>Valor Custo (Unidade Medida)</label>
                                    @Html.TextBoxFor(m => m.MateriaPrima.Valor, new { id = "txtMateriaPrimaValor", @class = "form-control js-monetaria js-obrigatorio", maxLenght = 10 })
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                        <input type="submit" class="btn btn-primary" value="Salvar" id="btnSalvarMateriaPrima" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/MateriaPrima/index.js"></script>
